{
	"name": "onedrive-browser",
	"displayName": "OneDrive Browser",
	"version": "0.0.1",
	"private": false,
	"description": "Browse and edit files from OneDrive in VS Code",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"browser": "./dist/web/extension.js",
	"scripts": {
		"compile-web": "webpack",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
		"vscode:prepublish": "yarn run package-web",
		"watch-web": "webpack --watch"
	},
	"contributes": {
		"commands": [
			{
				"command": "onedrive-browser.openOneDrive",
				"title": "Open OneDrive Folder"
			}
		],
		"webOpener": {
			"import": "webOpener.js",
			"scheme": "onedrive"
		}
	},
	"activationEvents": [
		"onCommand:onedrive-browser.openOneDrive",
		"onFileSystem:onedrive"
	],
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/vscode": "^1.63.0",
		"@types/webpack-env": "^1.16.2",
		"@vscode/test-web": "^0.0.15",
		"assert": "^2.0.0",
		"mocha": "^9.1.3",
		"process": "^0.11.10",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"typescript-esbuild": "latest",
		"webpack": "^5.76.0",
		"webpack-cli": "^4.8.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"preview": true
}
