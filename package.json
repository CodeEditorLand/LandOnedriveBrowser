{
	"activationEvents": [
		"onCommand:onedrive-browser.openOneDrive",
		"onFileSystem:onedrive"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "onedrive-browser.openOneDrive",
				"title": "Open OneDrive Folder"
			}
		],
		"webOpener": {
			"import": "webOpener.js",
			"scheme": "onedrive"
		}
	},
	"description": "Browse and edit files from OneDrive in VS Code",
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/vscode": "^1.63.0",
		"@types/webpack-env": "^1.16.2",
		"@vscode/test-web": "^0.0.15",
		"assert": "^2.0.0",
		"mocha": "^9.1.3",
		"process": "^0.11.10",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"typescript-esbuild": "0.4.5",
		"webpack": "^5.76.0",
		"webpack-cli": "^4.8.0"
	},
	"displayName": "OneDrive Browser",
	"name": "onedrive-browser",
	"preview": true,
	"scripts": {
		"compile-web": "webpack",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
		"vscode:prepublish": "yarn run package-web",
		"watch-web": "webpack --watch"
	},
	"type": "module"
}
